<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityLogin">

    <EditText
        android:id="@+id/altxtUser"
        android:layout_width="313dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="243dp"
        android:layout_marginEnd="56dp"
        android:ems="10"
        android:fontFamily="@font/poppins"
        android:hint="Correo Electronico"
        android:inputType="textPersonName"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/olvidastepass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/altxtPass"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:fontFamily="@font/poppins"
        android:text="Clic aqui si olvidates la Contrasena" />

    <TextView
        android:id="@+id/albtnIngresar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/alckRecordar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp"
        android:fontFamily="@font/poppins"
        android:text="Iniciar Sesion"
        android:textColor="#009688"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/albtnRegistrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/albtnIngresar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:fontFamily="@font/poppins"
        android:text="Registrarse"
        android:textColor="#009688" />

    <CheckBox
        android:id="@+id/alckRecordar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/olvidastepass"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:fontFamily="@font/poppins"
        android:text="Guardar Datos" />

    <EditText
        android:id="@+id/altxtPass"
        android:layout_width="313dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/altxtUser"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="49dp"
        android:layout_marginTop="26dp"
        android:ems="10"
        android:hint="Contrasena"
        android:inputType="textPassword"
        android:textAlignment="center" />


</RelativeLayout>